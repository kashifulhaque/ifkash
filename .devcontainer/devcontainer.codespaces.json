{
    "$schema": "https://containers.dev/implementors/json_schema/devContainer.schema.json",
    "name": "ifkash (GitHub Codespaces Optimized)",
    "dockerComposeFile": "compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        },
        "ghcr.io/devcontainers/features/github-cli:1": {
            "version": "latest"
        },
        "ghcr.io/jlaundry/devcontainer-features/mise:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "svelte.svelte-vscode",
                "bradlc.vscode-tailwindcss",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "serayuzgur.crates",
                "nvarner.typst-lsp",
                "mgt19937.typst-preview",
                "eamodio.gitlens",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "rust-analyzer.cargo.target": "wasm32-unknown-unknown",
                "rust-analyzer.check.allTargets": false,
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "[rust]": {
                    "editor.defaultFormatter": "rust-lang.rust-analyzer"
                },
                "[typst]": {
                    "editor.defaultFormatter": "nvarner.typst-lsp"
                },
                "files.watcherExclude": {
                    "**/target/**": true,
                    "**/node_modules/**": true,
                    "**/.git/objects/**": true,
                    "**/.git/subtree-cache/**": true,
                    "**/build/**": true
                }
            }
        },
        "codespaces": {
            "openFiles": [
                "README.md",
                ".devcontainer/README.md"
            ]
        }
    },
    "forwardPorts": [
        5173,
        8787,
        3001
    ],
    "portsAttributes": {
        "5173": {
            "label": "Frontend (SvelteKit)",
            "onAutoForward": "openBrowser",
            "protocol": "http"
        },
        "8787": {
            "label": "Backend API (Cloudflare Worker)",
            "onAutoForward": "notify",
            "protocol": "http"
        },
        "3001": {
            "label": "Typst Service",
            "onAutoForward": "silent",
            "protocol": "http"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "postStartCommand": "bash .devcontainer/start-services.sh",
    "overrideCommand": true,
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "remoteEnv": {
        "MISE_DATA_DIR": "/workspace/.mise",
        "MISE_CACHE_DIR": "/workspace/.mise/cache",
        "GITHUB_CODESPACE_TOKEN": "${localEnv:GITHUB_TOKEN}"
    },
    "remoteUser": "vscode",
    "runArgs": [
        "--shm-size=2gb"
    ],
    "waitFor": "postStartCommand",
    "onCreateCommand": "echo 'ðŸŽ‰ Codespace created! Setting up environment...'",
    "updateContentCommand": "echo 'ðŸ”„ Updating dependencies...' && bun install"
}