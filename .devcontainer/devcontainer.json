{
    "name": "ifkash Development Environment",
    "dockerComposeFile": "compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        },
        "ghcr.io/devcontainers/features/github-cli:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "svelte.svelte-vscode",
                "bradlc.vscode-tailwindcss",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "serayuzgur.crates",
                "nvarner.typst-lsp",
                "mgt19937.typst-preview",
                "eamodio.gitlens",
                "ms-azuretools.vscode-docker",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    }
                },
                "rust-analyzer.cargo.target": "wasm32-unknown-unknown",
                "rust-analyzer.check.allTargets": false,
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "[rust]": {
                    "editor.defaultFormatter": "rust-lang.rust-analyzer"
                },
                "[typst]": {
                    "editor.defaultFormatter": "nvarner.typst-lsp"
                }
            }
        }
    },
    "forwardPorts": [
        5173,
        8787,
        3001
    ],
    "portsAttributes": {
        "5173": {
            "label": "Frontend (SvelteKit)",
            "onAutoForward": "notify"
        },
        "8787": {
            "label": "Backend API (Cloudflare Worker)",
            "onAutoForward": "notify"
        },
        "3001": {
            "label": "Typst Service",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "postStartCommand": "bash .devcontainer/start-services.sh",
    "overrideCommand": true,
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "remoteEnv": {
        "MISE_DATA_DIR": "/workspace/.mise",
        "MISE_CACHE_DIR": "/workspace/.mise/cache"
    },
    "remoteUser": "vscode",
    "runArgs": [
        "--shm-size=2gb"
    ]
}